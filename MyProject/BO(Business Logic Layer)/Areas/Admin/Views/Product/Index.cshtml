@model PagedList.IPagedList<DAL_Data_Access_Layer_.EF.Products>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_UserLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh Sách Người Dùng</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Lug</th>
                        <th>Detail</th>
                        <th>Trending</th>
                        <th>NumberViews</th>
                        <th>Price</th>
                        <th>MetaKey</th>
                        <th>CreatAt</th>
                        <th>UpdateAt</th>
                        <th>DeleteAt</th>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Slug</th>
                        <th>Detail</th>
                        <th>Trending</th>
                        <th>NumberViews</th>
                        <th>Price</th>
                        <th>MetaKey</th>
                        <th>CreatAt</th>
                        <th>UpdateAt</th>
                        <th>DeleteAt</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td id="row_@item.Id">
                                <a class="btn btn-primary" href="/Admin/User/Edit/@item.Id">Sửa</a>
                                |
                                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                           {
                               Confirm = "Bạn có muốn xóa bản ghi này không",
                               OnComplete = "$(' row_" + @item.Id + " ').remove()",
                               HttpMethod = "Delete"
                           })
                            </td>*@

                            <th id="@item.Id">
                                <a>Sửa</a>
                                <a>Xóa</a>
                            </th>

                            <th>@item.Slug</th>
                            <th>@item.Detail</th>
                            <th>@item.Trending</th>
                            <th>@item.NumberViews</th>
                            <th>@item.Price</th>
                            <th>@item.MetaKey</th>
                            <th>@item.CreatAt</th>
                            <th>@item.UpdateAt</th>
                            <th>@item.DeleteAt</th>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-primary" href="/Admin/Product/Creat">Create</a>

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>

